@{
    ViewData["Title"] = "Sign In";
}
@model InforceTask.ViewModels.LoginViewModel

@if (User.Identity.IsAuthenticated)
{
    <div>
        <a class="btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
    </div>
}
else{
    <h2>Log in</h2>
    <form asp-action="Login" asp-controller="Account">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div>
            <div class="form-group">
                <label asp-for="Login">Enter Login</label>
                <input type="text" asp-for="Login" />
                <span class="text-danger" asp-validation-for="Login" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Enter password</label>
                <input asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password" ></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-outline-dark" />
            </div>
        </div>
    </form>
    <a asp-controller="Account" asp-action="Register">Create an account</a>
}